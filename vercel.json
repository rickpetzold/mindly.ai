{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "backend/app/server.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://whisper2.preview.softr.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ]
}